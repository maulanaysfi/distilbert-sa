apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: busybox-alpine-pvc
  labels:
    app: busybox-alpine
spec:
  storageClassName: nfs-server-sc
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 200Mi
---
apiVersion: v1
kind: Pod
metadata:
  name: busybox-alpine-pod
  labels:
    app: busybox-alpine
spec:
  containers:
    - name: alpine-container
      image: alpine:latest
      command: ["/bin/sh", "-c", "mkdir -p /mnt/nfs; sleep 10000"]
      volumeMounts:
        - name: nfs-storage
          mountPath: /mnt/nfs
  volumes:
    - name: nfs-storage
      persistentVolumeClaim:
        claimName: busybox-alpine-pvc
